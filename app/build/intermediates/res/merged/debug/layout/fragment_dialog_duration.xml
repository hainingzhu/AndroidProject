<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
	<RelativeLayout 
	    android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal" >
    <NumberPicker
        android:id="@+id/npDurationHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100dip" />
    <TextView
        android:id="@+id/textviewHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/npDurationHour"
        android:paddingLeft="5sp"
        android:text="hr"
        android:textSize="16sp" />
    <NumberPicker
        android:id="@+id/npDurationMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/textviewHour"
        android:width="100dip" />
	<TextView
        android:id="@+id/textviewMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/npDurationMinute"
        android:paddingLeft="5sp"
        android:text="min"
        android:textSize="16sp" />
        />
	</RelativeLayout>
</LinearLayout>