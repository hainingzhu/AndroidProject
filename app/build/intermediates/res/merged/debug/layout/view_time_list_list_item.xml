<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_time_line_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="20dp"
    android:orientation="vertical" >

    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@android:color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_time"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center" />

        <View
            android:id="@+id/color_code_sleep"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/time_line_caffeine"
            android:visibility="gone" />

        <View
            android:id="@+id/color_code_meal"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/time_line_meal"
            android:visibility="gone" />

        <View
            android:id="@+id/color_code_excercise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/time_line_exercise"
            android:visibility="gone" />

        <View
            android:id="@+id/color_code_caffein"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/time_line_caffeine"
            android:visibility="gone" />

        <View
            android:id="@+id/color_code_tobacco"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/time_line_tobacco"
            android:visibility="gone" />

        <View
            android:id="@+id/color_code_medication"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/time_line_medication"
            android:visibility="gone" />

        <View
            android:id="@+id/color_code_alchohol"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/time_line_alcohol"
            android:visibility="invisible" />

        <!-- Other Activity -->

        <View
            android:id="@+id/color_code_activity1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/time_line_act1"
            android:visibility="invisible" />

        <View
            android:id="@+id/color_code_activity2"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/time_line_act2"
            android:visibility="invisible" />

        <View
            android:id="@+id/color_code_activity3"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/time_line_act3"
            android:visibility="invisible" />

        <View
            android:id="@+id/color_code_activity4"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/time_line_act4"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>