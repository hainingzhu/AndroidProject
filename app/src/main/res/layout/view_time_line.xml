<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <!-- 날짜 이동 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp" >

        <Button
            android:id="@+id/btn_time_line_prev"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/uparrow_new"
            android:gravity="center_vertical"
			android:scaleType="centerInside" />

        <TextView
            android:id="@+id/text_day"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:paddingLeft="52dp"
            android:text="adsf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_current"
                android:background="@drawable/inset_button"
		    	android:gravity="center"
		    	style="?android:attr/borderlessButtonStyle"
		    	android:textSize="11sp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Current Time" />
        </LinearLayout>
    </RelativeLayout>

    <kr.mintech.sleep.tight.views.TimeLineCanvasView
        android:id="@+id/canvas_time_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_time_line_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/downarrow_new"
            android:gravity="center_vertical"
            android:scaleType="centerInside"/>
        
        <ImageView
            android:id="@+id/img_bottom_icon_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/time_line_icon_dimen"
            android:layout_marginRight="@dimen/time_line_icon_dimen"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_bottom_icon_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/time_line_icon_dimen"
            android:layout_marginRight="@dimen/time_line_icon_dimen"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_bottom_icon_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/time_line_icon_dimen"
            android:layout_marginRight="@dimen/time_line_icon_dimen"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_bottom_icon_4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/time_line_icon_dimen"
            android:layout_marginRight="@dimen/time_line_icon_dimen"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_bottom_icon_5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/time_line_icon_dimen"
            android:layout_marginRight="@dimen/time_line_icon_dimen"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_bottom_icon_6"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/time_line_icon_dimen"
            android:layout_marginRight="@dimen/time_line_icon_dimen"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_bottom_icon_7"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/time_line_icon_dimen"
            android:layout_marginRight="@dimen/time_line_icon_dimen"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/img_bottom_icon_8"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/time_line_icon_dimen"
            android:layout_marginRight="@dimen/time_line_icon_dimen"
            android:scaleType="centerInside" />
    </LinearLayout>

</LinearLayout>